{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@constants/*": ["constants/*"],
      "@public/*": ["public/*"],
      "@lib/*": ["lib/*"]
    },
    "strict": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/db/string.d.ts",
    "redux/store.tsx",
    "pages/api/article/getArticle.js",
    "pages/api/users/getUsers.js",
    "prisma/db/getData.tsx"
, "pages/api/search/getByTitle.js"  ],
  "exclude": ["node_modules"]
}
